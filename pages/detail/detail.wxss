.container { max-width: 600rpx; margin: 0 auto; padding: 48rpx 0 120rpx 0; }
.food-img { width: 120rpx; height: 120rpx; border-radius: 24rpx; background: #e7e3e0; display: flex; align-items: center; justify-content: center; font-size: 64rpx; margin: 0 auto 24rpx auto; }
.food-name { text-align: center; font-size: 40rpx; color: #6d6d6d; font-weight: bold; margin-bottom: 8rpx; }
.food-en { text-align: center; color: #b0a99f; font-size: 28rpx; margin-bottom: 16rpx; }
.section-title { color: #bfae9e; font-size: 32rpx; margin: 36rpx 0 16rpx 0; }
.tracking-box { 
  display: flex; 
  justify-content: space-between; 
  padding: 0 40rpx;
  margin-bottom: 12rpx; 
}
.track-item { 
  display: flex; 
  flex-direction: column; 
  align-items: center;
  width: 160rpx;  /* 固定宽度 */
}
.track-label { 
  font-size: 24rpx; 
  color: #bfae9e; 
  margin: 4rpx 0; 
}
.track-date { 
  font-size: 22rpx; 
  color: #b0a99f; 
  min-height: 30rpx;  /* 固定最小高度，即使没有日期也保持间距 */
  line-height: 30rpx;
  text-decoration: underline; 
}
.like-box { 
  display: flex; 
  justify-content: center; 
  align-items: center;
  gap: 24rpx; 
  margin: 20rpx 0 32rpx 0; 
  height: 80rpx;
}
.like-face { 
  font-size: 48rpx; 
  cursor: pointer; 
  transition: transform 0.15s, color 0.15s; 
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  line-height: 1;
  vertical-align: middle;
  transform-origin: center center; 
}
.like-face.selected { 
  transform: scale(1.35); 
  color: #4ecb8f; 
  text-shadow: 0 2rpx 8rpx #bfae9e44; 
}
.remark-input { width: 90%; min-height: 80rpx; border-radius: 20rpx; border: 3rpx solid #e2d6ce; padding: 16rpx; font-size: 28rpx; background: #f6f5f3; margin: 0 auto; display: block; }
.btn-group { 
  display: flex; 
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center; 
  align-items: center;
  gap: 16rpx; 
  margin: 48rpx 0 0 0; 
  padding: 0 20rpx;
}
.btn { 
  background: #bfae9e; 
  color: #fff; 
  border: none; 
  border-radius: 24rpx; 
  padding: 16rpx 24rpx; 
  font-size: 28rpx; 
  white-space: nowrap;
  flex: 1;
  max-width: 180rpx;
}
.btn.save { background: #8c8c8c; }
.btn.reset { background: #ff9500; }
.track-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 4rpx dashed #bfae9e;
  background: #f6f5f3;
  position: relative;
}
.track-circle.status-allergy {
  border-style: solid;
  border-color: #ff6b6b;
  background: #ff6b6b;
}
.track-circle.status-observe {
  border-style: solid;
  border-color: #ffd93d;
  background: #ffd93d;
}
.track-circle.status-pass {
  border-style: solid;
  border-color: #4ecb8f;
  background: #4ecb8f;
}
.status-options {
  position: absolute;
  top: -88rpx;  /* 由于改为横向，可以减少上方距离 */
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: row;  /* 改为横向排列 */
  gap: 12rpx;
  z-index: 100;
}
.status-option {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  cursor: pointer;
}
.status-option.red {
  background: #ff6b6b;
}
.status-option.yellow {
  background: #ffd93d;
}
.status-option.green {
  background: #4ecb8f;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.1);
  z-index: 50;
} 