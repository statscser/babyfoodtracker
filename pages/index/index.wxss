.header { text-align: center; padding: 24rpx 0 8rpx 0; }
.app-title { font-size: 40rpx; letter-spacing: 2rpx; color: #8c8c8c; font-weight: bold; margin-bottom: 16rpx; }
.tabs { display: flex; flex-wrap: wrap; justify-content: center; gap: 12rpx; margin-bottom: 16rpx; margin-top: 16rpx; }
.tab { background: #f0edea; border-radius: 32rpx; padding: 12rpx 36rpx; color: #8c8c8c; font-size: 28rpx; margin-bottom: 8rpx; }
.tab.active { background: #bfae9e; color: #fff; }
.food-table { width: 98vw; max-width: 700rpx; margin: 0 auto; }
.food-row { background: #fff; border-radius: 28rpx; box-shadow: 0 8rpx 32rpx #e2d6ce33; min-height: 80rpx; display: flex; align-items: center; margin-bottom: 10rpx; transition: box-shadow 0.2s; padding: 8rpx 0; }
.food-row:active { box-shadow: 0 12rpx 48rpx #e2d6ce55; }
.food-cell { flex: 1 1 0; padding: 0 6rpx; font-size: 28rpx; color: #6d6d6d; display: flex; align-items: center; justify-content: center; }
.food-name { flex-direction: column; align-items: flex-start; justify-content: center; min-width: 0; max-width: 100%; font-weight: 500; padding-left: 16rpx; }
.food-name text { display: block; white-space: nowrap; }
.food-en { color: #b0a99f; font-size: 24rpx; margin-left: 0; margin-top: 2rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.food-cat { font-size: 48rpx; justify-content: center; }
.progress { display: flex; gap: 8rpx; justify-content: center; }
.dot { 
  width: 32rpx; 
  height: 32rpx; 
  border-radius: 50%; 
  border: 4rpx dashed #bfae9e; 
  background: #f6f5f3; 
}
.dot.status-allergy {
  border-style: solid;
  border-color: #ff6b6b;
  background: #ff6b6b;
}
.dot.status-observe {
  border-style: solid;
  border-color: #ffd93d;
  background: #ffd93d;
}
.dot.status-pass {
  border-style: solid;
  border-color: #4ecb8f;
  background: #4ecb8f;
}
.dot.checked { 
  border-style: solid;
  background: #4ecb8f; 
  border-color: #4ecb8f;
}
.like-face { 
  font-size: 48rpx; 
  margin-left: 0; 
  justify-content: center;
  display: flex;
  align-items: center;
}
.like-face.empty {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 4rpx dashed #bfae9e;
  color: transparent;
}

/* 搜索和筛选栏样式 */
.search-filter-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  gap: 16rpx;
  margin-bottom: 16rpx;
  justify-content: center;
}

.search-box {
  flex: 0 0 50%;
  background: #f6f5f3;
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #e2d6ce;
}

.search-box input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #6d6d6d;
}

.clear-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8c8c8c;
  font-size: 32rpx;
  margin-right: 8rpx;
}

.filter-sort-buttons {
  display: flex;
  gap: 12rpx;
  margin-left: 16rpx;
}

.filter-btn, .sort-btn {
  background: #f0edea;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 弹窗样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.popup-content {
  background: #fff;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 32rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #6d6d6d;
  margin-bottom: 24rpx;
  text-align: center;
}

.filter-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 16rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-option {
  background: #f6f5f3;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #8c8c8c;
}

.filter-option.active {
  background: #bfae9e;
  color: #fff;
}

.sort-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.sort-option {
  background: #f6f5f3;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #8c8c8c;
  text-align: center;
}

.sort-option.active {
  background: #bfae9e;
  color: #fff;
}

.popup-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0edea;
}

.footer-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.footer-btn.reset {
  background: #f6f5f3;
  color: #8c8c8c;
}

.footer-btn.confirm {
  background: #bfae9e;
  color: #fff;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  margin: 0 auto;
  width: 98vw;
  max-width: 700rpx;
}

.filter-tag {
  display: flex;
  align-items: center;
  background: #f0edea;
  border-radius: 32rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.tag-close {
  margin-left: 8rpx;
  font-size: 20rpx;
  color: #bfae9e;
  padding: 4rpx;
}

.tag-close:active {
  opacity: 0.7;
} 